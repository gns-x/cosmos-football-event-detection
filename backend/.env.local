# Environment variables for Local Cosmos Video Analysis API

# Model settings
MODEL_NAME=nvidia/Cosmos-Reason1-7B
DEVICE=auto  # auto, cuda, or cpu
USE_QUANTIZATION=true  # true for 4-bit quantization (GPU only)
MAX_TOKENS=512
TEMPERATURE=0.7

# API settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# CORS settings
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000

# Video processing settings
MAX_FRAMES=10
FRAME_SKIP=30
JPEG_QUALITY=85

# Memory optimization
CLEAR_CACHE_ON_REQUEST=false
MAX_MEMORY_USAGE=0.8  # Maximum GPU memory usage (0.0-1.0)
